{
  "Service": {
    "Name": "IdentityService",
    "Url": "http://localhost:5001",
    "Port": 5001
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "PrivateKeyPath": "Keys/private.pem",
    "PublicKeyPath": "Keys/public.pem",
    "Issuer": "http://localhost:5001",
    "Audience": "http://localhost:5000",
    "ExpiryMinutes": 60,
    "ExpiryDay": 14 
  },
  "DatabaseSettings": {
    "ConnectionString": "Server=localhost;Database=CinemaAccount;User Id=sa;Password=YourStrongPassword;TrustServerCertificate=True;"
  },
  "RedisConnection": {
    "Host": "localhost",
    "Port": "6379",
    "IsSSL": false,
    "Password": ""
  }
}
